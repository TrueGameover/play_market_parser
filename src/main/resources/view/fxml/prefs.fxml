<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="700" maxWidth="700" minHeight="700" minWidth="700" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="playMarketParser.gui.PrefsController">
    <VBox AnchorPane.bottomAnchor="45.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <TitledPane collapsible="false" text="%appSetting">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="30"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="30"/>
                </columnConstraints>
                <Label text="%lang" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0"
                       GridPane.valignment="CENTER"/>
                <HBox GridPane.columnIndex="1">
                    <RadioButton fx:id="ruRb" text="Русский"/>
                    <RadioButton fx:id="enRb" text="English"/>
                </HBox>
                <Label text="%csvDelim" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="0"
                       GridPane.valignment="CENTER"/>
                <ComboBox GridPane.columnIndex="3" fx:id="csvDelimCb"/>
            </GridPane>
        </TitledPane>
        <TitledPane collapsible="false" text="%general">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="30"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="30"/>
                </columnConstraints>
                <Label text="%timeout" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0"
                       GridPane.valignment="CENTER"/>
                <TextField fx:id="timeoutTxt" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="0"
                           GridPane.valignment="CENTER"/>
                <Label text="%proxy" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="0"
                       GridPane.valignment="CENTER"/>
                <TextField fx:id="proxyTxt" GridPane.columnIndex="3" GridPane.halignment="LEFT" GridPane.rowIndex="0"
                           GridPane.valignment="CENTER"/>
                <Label text="%userAgent" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1"
                       GridPane.valignment="CENTER"/>
                <TextField fx:id="userAgentTxt" GridPane.columnIndex="1" GridPane.halignment="LEFT"
                           GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
                <Label text="%acceptLang" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1"
                       GridPane.valignment="CENTER"/>
                <TextField fx:id="acceptLangTxt" GridPane.columnIndex="3" GridPane.halignment="LEFT"
                           GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
            </GridPane>
        </TitledPane>
        <TitledPane collapsible="false" text="%posChecking">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="30"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="30"/>
                </columnConstraints>
                <Label text="%threadsCount" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0"
                       GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Spinner fx:id="posThreadsCntSpin" prefHeight="25.0" prefWidth="60.0" GridPane.columnIndex="1"
                         GridPane.rowIndex="0"/>
                <Label text="%checksCount" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Spinner fx:id="posChecksCntSpin" prefHeight="25.0" prefWidth="60.0" GridPane.columnIndex="3"
                         GridPane.rowIndex="0"/>
            </GridPane>
        </TitledPane>
        <TitledPane collapsible="false" text="%tipsCollecting">
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="30"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="20"/>
                    <ColumnConstraints hgrow="SOMETIMES" percentWidth="30"/>
                </columnConstraints>
                <Label text="%threadsCount" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0"
                       GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Spinner fx:id="tipsThreadsCntSpin" prefHeight="25.0" prefWidth="60.0" GridPane.columnIndex="1"
                         GridPane.rowIndex="0"/>

                <Label text="%tipsParsingDepth" GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                       GridPane.rowIndex="0" GridPane.valignment="CENTER">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Spinner fx:id="tipsParsingDepthSpin" prefHeight="25.0" prefWidth="60.0" GridPane.columnIndex="3"
                         GridPane.rowIndex="0"/>
            </GridPane>
        </TitledPane>
    </VBox>
    <HBox nodeOrientation="RIGHT_TO_LEFT" spacing="10.0" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10">
        <Button cancelButton="true" minWidth="100" mnemonicParsing="false" onAction="#onCancelClick" text="%cancel"/>
        <Button defaultButton="true" minWidth="100" mnemonicParsing="false" onAction="#onOkClick" text="%ok"/>
    </HBox>
</AnchorPane>
